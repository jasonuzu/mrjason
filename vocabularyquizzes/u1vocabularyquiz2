  <script>
    function setupQuiz(quizId, answers) {
      let score = 0;
      let total = Object.keys(answers).length;
      let answered = {};
      document.querySelectorAll(`#${quizId} input[type=radio]`).forEach(radio => {
        radio.addEventListener('change', function() {
          const qName = this.name;
          const feedbackEl = document.getElementById(`${qName}-feedback`);
          if (this.value === answers[qName]) {
            feedbackEl.textContent = '✔ Correct!';
            feedbackEl.className = 'feedback correct';
            if (!answered[qName]) {
              score++;
              answered[qName] = true;
            }
          } else {
            feedbackEl.textContent = `✘ Incorrect. Correct answer: ${answers[qName]}`;
            feedbackEl.className = 'feedback incorrect';
            if (!answered[qName]) {
              answered[qName] = true;
            }
          }
          document.getElementById(`result${quizId.replace('quiz','')}`).textContent = `Your score: ${score} / ${total}`;
        });
      });
    }

    // Setup all quizzes
    setupQuiz('quiz1', {
      q1: 'get a degree', q2: 'get promoted', q3: 'leave school', q4: 'retire', q5: 'settle down'
    });
    setupQuiz('quiz2', {
      q1: 'start a career', q2: 'start a family', q3: 'travel the world', q4: 'career path', q5: 'time management'
    });
    setupQuiz('quiz3', {
      q1: 'save up money', q2: 'run out of money', q3: 'cheer up', q4: 'wake up', q5: 'struggle with'
    });
  </script>
